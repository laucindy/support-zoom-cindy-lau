<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :username, "Enter a username" %><%= f.text_field :username, placeholder: "Sample Name" %><br /><br />
  <%= f.label :email %><%= f.text_field :email, value: "test@example.com" %><br /><br />  
  <%= f.label :password %><%= f.text_field :password %><br /><br />
  
  <%= f.submit "Submit" %>
<% end %>